;--- Colors ---;

[colors]
;Background Colors
background = #e0343434
background-alt = #ef242424
background-unf = #cf484848
background-mod1 = #cf141414

;Foreground Colors
foreground = #ffffff

;--- Main Bar Config ---;

[bar/Polybar]
width = 100%
height = 30
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}

;--- Fonts ---;

font-0 = Hack:style=Bold:size=8;1
font-1 = FontAwesome:fontformat=truetype:size=12;1
font-2 = Iosevka Nerd Font:pixelsize=13;3

;--- Module Setup ---;

modules-left = i3
modules-center = xwindow
modules-right = WhatsAppNotif kdeconnect filesystem temperature wireless-network volume battery

;-------------;

;--- Main Bar Bottom ---;

[bar/PolybarBot]
width = 100%
height = 30
fixed-center = true
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}

;--- Fonts for Bottom Bar ---;

font-0 = Hack:style=Bold:size=8;1
font-1 = FontAwesome:fontformat=truetype:size=12;1
font-2 = "Iosevka Nerd Font:pixelsize=13;3"

;--- Module Setup For Bottom Bar ---;

modules-left = Firefox FileManager Whatsapp DuckDuckGo Config
modules-center = date weather wireless-speed
modules-right = spotify

;---------------;

;--- Modules ---;

;--- Weather ---;

[module/weather]
type = custom/script
interval = 60
format = <label>
format-prefix = " "
format-prefix-padding = 2
format-padding = 1
format-prefix-foreground = ${colors.foreground}
exec = python ~/.config/polybar/weather.py

;--- WhatsApp Notifications ---;

[module/WhatsAppNotif]
type = custom/script
label-padding = 2
exec = "~/.config/polybar/scripts/whatsapp.sh"
format-foreground = ${colors.foreground}
format-background = ${colors.background-alt}

;--- KDEConnect ---;

[module/kdeconnect]
type = custom/script
label-active-font = 3
label-padding = 2
exec = "~/.config/polybar/polybar-kdeconnect.sh -d"
tail = true
format-foreground = ${colors.foreground}
format-background = ${colors.background-alt}

;--- Spotify Python Version ---;

[module/spotify]
type = custom/script
exec = python ~/.config/polybar/scripts/spotify.py
label-padding = 1
interval = 2

;--- Spotify Shell Script Version ---;

;[module/spotify]
;type = custom/spotify
;exec = ~/.config/polybar/spotify.sh "%artist% - %title%"
;label-padding = 1
;interval = 2

;--- Workspaces ---;

[module/i3]
type = internal/i3
label-unfocused-background = ${colors.background-unf}

ws-icon-0 = 1;
ws-icon-1 = 2;2
ws-icon-2 = 3;
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;10

label-mode = %mode%
label-mode-padding = 3
label-mode-background = #e60053

label-focused = %icon%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background-alt}
label-focused-padding = 3

label-unfocused = %icon%
label-unfocused-padding = 3

label-visible = %icon%
label-visible-padding = 3

label-urgent = %icon%
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.background-alt}
label-urgent-padding = 3

;--- Filesystem Space ---;

[module/filesystem]
type = internal/fs

;Mountpoints to display
mount-0 = /
;Seconds between update (30 default)
interval = 10

format-mounted-foreground = ${colors.foreground}
format-mounted-background = ${colors.background-alt}

label-mounted = "  %percentage_free%% (%free%)"
label-mounted-padding = 2

;--- Temperature ---;

[module/temperature]
type = internal/temperature

;Seconds between update (1 default)
interval = 0.5

;Thermal zone to use (0 default)
thermal-zone = 0

;Full path fo temperature sysfs path (/sys/class/thermal/thermal_zone0/temp)
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input

warn-temperature = 86

format-background = ${colors.background-alt}
format-warn-background = ${colors.background-alt}
format-warn-foreground = #ff0000

format = <label>
label = " %temperature-c%"
label-padding = 2

format-warn = <label-warn>
label-warn = " %temperature-c%"
label-warn-padding = 2

;--- Network Speed ---;

[module/wireless-speed]
type = internal/network
interface = wlp2s0
interval = 1.5

label-connected = "D: %downspeed%, U: %upspeed%"
label-connected-padding = 2

;--- Wireless Network ---;

[module/wireless-network]
type = internal/network
interface = wlp2s0
interval = 5

format-connected-background = ${colors.background-alt}
format-connected = "<ramp-signal> <label-connected>"
format-connected-padding = 2
label-connected = "%essid%"

format-disconnected = "  no Wifi  "
format-disconnected-background = ${colors.background-unf}
format-disconnected-foreground = ${colors.foreground}

ramp-signal-0 = " "
ramp-signal-1 = " "
ramp-signal-2 = " "
ramp-signal-3 = " "
ramp-signal-4 = " "
ramp-signal-foreground = ${colors.foreground}

