;--- Calendar and Hour ---;

[module/date]
type = internal/date
interval = 5

date =
date-alt = "%Y-%m-%d"

time = " %a %b %d     %I:%M %p"
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground}

label = %date% %time%

;--- Volume ---;

[module/volume]
type = internal/pulseaudio
;type = internal/alsa
;Sink, to get use "pacmd list-sinks | grep -e 'name:' -e 'index:'
sink = alsa_output.pci-0000_00_1b.0.analog-stereo

format-volume = "<ramp-volume> <label-volume>"
format-volume-background = ${colors.background-alt}
format-volume-padding = 2
format-muted-background = ${colors.background-unf}
label-muted = "   mute   "

ramp-volume-0 = 
ramp-volume-1 = 

;--- Battery ---;

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 55

format-charging = "<animation-charging> <label-charging>"
format-charging-foreground = ${colors.foreground}
format-charging-background = ${colors.background-alt}
format-charging-padding = 2

format-discharging = "<ramp-capacity> <label-discharging>"
format-discharging-foreground = ${colors.foreground}
format-discharging-background = ${colors.background-alt}
format-discharging-padding = 2

format-full =  <label-full>
format-full-foreground = ${colors.foreground}
format-full-background = ${colors.background-alt}
format-full-padding = 2

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = Full

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""

animation-charging-0 = ""
animation-charging-1 = ""
animation-charging-2 = ""
animation-charging-3 = ""
animation-charging-4 = ""
animation-charging-framerate = 750

;--- PowerMenu (reboot/shutdown/sleep) ---;

[module/powermenu]
type = custom/menu

format-spacing = 1
label-open = "      "
label-open-background = ${colors.background-unf}
label-open-foreground = ${colors.foreground}
label-close = "    cancel   "
label-close-background = ${colors.background-unf}
label-close-foreground = ${colors.foreground}
label-separator = " "
label-separator-foreground = ${colors.foreground}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = "power off"
menu-0-1-exec = menu-open-2
menu-0-2 = "suspend   "
menu-0-2-exec = menu-open-3

menu-1-0 = "reboot   "
menu-1-0-exec = reboot

menu-2-0 = "power off   "
menu-2-0-exec = shutdown 0

menu-3-0 = "suspend   "
menu-3-0-exec = systemctl suspend

